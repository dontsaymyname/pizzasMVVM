<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#130E3F">
    <item>
        <shape
            android:shape="rectangle">
            <corners
                android:radius="14dp"
                />
            <gradient
                android:angle="270"
                android:centerX="95%"
                android:centerColor="#FF9800"
                android:startColor="#FF5722"
                android:endColor="#FF9800"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="240dp"
                android:height="40dp"
                />

        </shape>
    </item>
</ripple>